<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<HBox xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/8"
      fx:controller="gndata.app.ui.notes.NotesSearchCtrl"
      fx:id="view">

    <children>
        <ToolBar nodeOrientation="LEFT_TO_RIGHT" HBox.hgrow="ALWAYS">
            <items>
                <TextField fx:id="searchField" promptText="Search ..."/>
            </items>
        </ToolBar>
        <ToolBar nodeOrientation="RIGHT_TO_LEFT">
            <items>
                <Button text="&gt;" onAction="#goForward"/>
                <Button text="&lt;" onAction="#goBack"/>
                <Button text="reset" onAction="#resetNotesFilter"/>
            </items>
        </ToolBar>
    </children>
</HBox>
