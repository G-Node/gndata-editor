<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/8"
            fx:controller="gndata.app.ui.notes.NotesFavoritesCtrl"
            fx:id="view">
    <top>
        <VBox>
            <children>
                <Label styleClass="fav-header" text="Favorites"><font><Font size="18.0"/></font></Label>

                <ListView styleClass="fav-list" fx:id="notesFavorites" />
            </children>
        </VBox>
    </top>
    <bottom>
        <Button fx:id="openNotesFavoritesHandling" text="Manage Favorites" maxWidth="Infinity" />
    </bottom>

</BorderPane>
