<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="gndata.app.ui.metadata.manage.RenameInstance2Ctrl"
            fx:id="view">

    <prefHeight>180</prefHeight>
    <prefWidth>500</prefWidth>

    <!-- title -->
    <top>
        <VBox styleClass="dialog-header">
            <Label fx:id="renLabel" />
        </VBox>
    </top>

    <!-- form -->
    <center>
        <VBox fx:id="renVBox" styleClass="dialog-form">
            <TextField fx:id="renText" />
        </VBox>
        <fx:script>
            renLabel.textProperty().bind(controller.renameLabelProperty())
            renText.textProperty().bindBidirectional(controller.renameValueProperty())
            renText.promptTextProperty().bindBidirectional(controller.promptValueProperty())
        </fx:script>
    </center>


    <!-- buttons -->
    <bottom>
        <HBox styleClass="dialog-footer">
            <Button onAction="#cancel">
                Cancel
            </Button>
            <Button onAction="#ok">
                OK
            </Button>
        </HBox>
    </bottom>

</BorderPane>
